extends base


block content 
    // Breadcrumb Section Begin
    .breacrumb-section(style='padding-top:100px;')
        .container(style='margin-top:0px;')
            .row
                .col-lg-12
                    .breadcrumb-text
                        a(href='shop.php')
                            i(class='icon_bag_alt' style='width:20px')
                            | Shop
                        span=product.name
    .container
        .row
            .col-md-5
                #carouselExampleControls.carousel.slide(data-ride='carousel')
                    .carousel-inner
                        .carousel-item.active
                            img.d-block(src=`/img/products/${product.images[0]}` style="max-width:100%;" alt='First slide')
                        
                        
                        - for (var i = 0; i < product.images.length; ++i) {
                        
                        
                            .carousel-item
                                img.d-block(src=`/img/products/${product.images[i]}` alt='Second slide' style="max-width:100%;" )
                        -}
                    a.carousel-control-prev(href='#carouselExampleControls' role='button' data-slide='prev')
                        span.carousel-control-prev-icon(aria-hidden='true')
                        span.sr-only Previous
                    a.carousel-control-next(href='#carouselExampleControls' role='button' data-slide='next')
                        span.carousel-control-next-icon(aria-hidden='true')
                        span.sr-only Next             
            .col-md-7
                h1=product.name 
                p=product.price 
                p=product.description
                button.btn.btn--green.span-all-rows#add-to-cart(data-product-id=`${product.id}`) Add to cart

