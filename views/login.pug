block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg(style='margin-top:80px') Log into your account
            center 
                form.form.form--login
                    .form__group
                        label.form__label(for='email' style='display: block;font-size: 18px;color: #252525;') Email address *
                        input#email.form__input(type='email', placeholder='you@example.com', style='border: 1px solid #ebebeb;height: 50px;width: 40%;padding-left: 20px;padding-right: 15px;', required)
                    br
                    .form__group.ma-bt-md
                        label.form__label(for='password' style='display: block;font-size: 18px;color: #252525;') Password *
                        input#password.form__input(type='password', placeholder='••••••••', required, style='border: 1px solid #ebebeb;height: 50px;width: 40%;padding-left: 20px;padding-right: 15px;', minlength='8')
                    .form__group
                        button.btn.btn--green Login
